// Comprehensive test of IGCSE pseudocode features
DECLARE number1, number2, sum : INTEGER
DECLARE message : STRING
DECLARE count : INTEGER
DECLARE result : REAL

// Test basic arithmetic and assignment
number1 ← 10
number2 ← 25
sum ← number1 + number2
OUTPUT "The sum is: " + sum

// Test string operations
message ← "PseudoRun Desktop"
OUTPUT "Welcome to " + message

// Test real numbers
result ← 3.14159 * 2
OUTPUT "Result: " + result

// Test WHILE loop
count ← 1
WHILE count <= 3 DO
    OUTPUT "Loop iteration: " + count
    count ← count + 1
ENDWHILE

// Test FOR loop
FOR i ← 1 TO 3
    OUTPUT "For loop: " + i
NEXT i

// Test IF statement
IF sum > 20 THEN
    OUTPUT "Sum is greater than 20"
ELSE
    OUTPUT "Sum is not greater than 20"
ENDIF

// Test nested conditions
DECLARE age : INTEGER
age ← 18
IF age >= 18 THEN
    OUTPUT "You are eligible to vote"
    IF age >= 21 THEN
        OUTPUT "You can also drive"
    ENDIF
ELSE
    OUTPUT "You are not eligible to vote"
ENDIF

// Test CASE statement (if supported)
DECLARE grade : CHAR
grade ← 'B'
CASE grade OF
    'A' : OUTPUT "Excellent"
    'B' : OUTPUT "Good"
    'C' : OUTPUT "Average"
    OTHERWISE : OUTPUT "Need improvement"
ENDCASE

// Test arrays
DECLARE numbers : ARRAY[1..5] OF INTEGER
numbers[1] ← 10
numbers[2] ← 20
numbers[3] ← 30
OUTPUT "First array element: " + numbers[1]

OUTPUT "=== Test completed successfully ==="